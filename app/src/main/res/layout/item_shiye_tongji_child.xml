<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_item_shiye_tongji_child_sign"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/tv_item_shiye_tongji_child_name"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
       />

    <TextView
        android:id="@+id/tv_item_shiye_tongji_child_nan"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/tv_item_shiye_tongji_child_nv"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_shiye_tongji_child_all"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"

        />


</LinearLayout>