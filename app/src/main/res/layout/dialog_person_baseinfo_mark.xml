<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EB1FA">

    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
        android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:text="标识类型："/>

        <Spinner
            android:id="@+id/sp_dialog_person_baseinfo_mark"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="33dp"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_dialog_person_baseinfo_mark_add"
            android:layout_gravity="center"
            android:background="@drawable/selector_shiwuye_detail_btn"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:text="添加"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_dialog_person_baseinfo_mark_wh"
            android:layout_gravity="center"
            android:background="@drawable/selector_shiwuye_detail_btn"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:text="维护标识"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@drawable/title2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="人员标识列表"/>

    <LinearLayout
        android:background="#72A0F6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="编号"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="标识类型"/>

        <TextView
            android:id="@+id/tv_dialog_person_baseinfo_date"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/perpler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:id="@+id/lv_dialog_person_baseinfo_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>

    </LinearLayout>

    <LinearLayout
       android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_dialog_person_baseinfo_mark_modify"
            android:layout_gravity="center"
            android:background="@drawable/selector_shiwuye_detail_btn"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:text="确认修改"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_dialog_person_baseinfo_mark_close"
            android:layout_gravity="center"
            android:background="@drawable/selector_shiwuye_detail_btn"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:text="关闭"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>