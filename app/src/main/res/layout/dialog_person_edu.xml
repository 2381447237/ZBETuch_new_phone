<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7daf4">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="学校名称 :"/>

        <EditText
            android:id="@+id/et_dialog_person_edu_name"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="学        历 :"/>

        <EditText
            android:id="@+id/et_dialog_person_edu_edu"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="专        业 :"/>

        <EditText
            android:id="@+id/et_dialog_person_edu_major"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="开始时间 :"/>

        <EditText
            android:id="@+id/et_dialog_person_edu_start_time"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="结束时间 :"/>

        <EditText
            android:id="@+id/et_dialog_person_edu_end_time"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>

        <Button
            android:id="@+id/btn_dialog_person_edu_sure"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="确定"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btn_dialog_person_edu_cancel"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="取消"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
    </LinearLayout>

</LinearLayout>