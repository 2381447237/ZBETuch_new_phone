<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7daf4">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="调查走访日期 :"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_dialog_job_route_one_time"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="人员基本情况 :"/>


        <Spinner
            android:id="@+id/sp_dialog_job_route_one_base_case"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="人员具体情况 :"/>


        <Spinner
            android:id="@+id/sp_dialog_job_route_one_detail_case"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="单位名称 :"/>

        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_one_company"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="调查人 :"/>

        <Spinner
            android:id="@+id/sp_dialog_job_route_one_inves"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="备注 :"/>

        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_one_mark"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            />
        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btn_dialog_job_route_one_ditto"
            android:background="@drawable/button_selector"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="调查结果同上"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>

        <Button
            android:id="@+id/btn_dialog_job_route_one_sure"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="确定"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btn_dialog_job_route_one_cancel"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="取消"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>