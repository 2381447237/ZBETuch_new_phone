<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="5dp">
    <!--android:background="@drawable/firstpage_listtitlebackground1"-->
    <RelativeLayout
        android:background="#5ca2e4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:id="@+id/item_main_layout_gv_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"/>

        <!--android:layout_alignParentBottom="true"-->
        <TextView
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/item_main_layout_gv_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多>>"
            android:textSize="14sp"
            android:paddingRight="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:background="#ccccff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.youli.zbetuch.jingan.view.MyListView
            android:cacheColorHint="@android:color/transparent"
            android:id="@+id/item_main_layout_gv_content_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.youli.zbetuch.jingan.view.MyListView>
    </LinearLayout>
</LinearLayout>