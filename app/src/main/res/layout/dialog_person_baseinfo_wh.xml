<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@drawable/title2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="维护标识列表"/>

    <LinearLayout
        android:background="@drawable/perpler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:id="@+id/lv_dialog_person_baseinfo_wh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9EB1FA">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名  称:"/>

            <EditText
                android:id="@+id/et_dialog_person_baseinfo_wh_name"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:background="#ffffff"
                android:text=" "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_person_baseinfo_wh_add"
                android:layout_gravity="center"
                android:background="@drawable/selector_shiwuye_detail_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="28dp"
                android:textSize="14sp"
                android:text="添加保存"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_dialog_person_baseinfo_wh_update"
                android:layout_gravity="center"
                android:background="@drawable/selector_shiwuye_detail_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="28dp"
                android:textSize="14sp"
                android:text="修改保存"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_dialog_person_baseinfo_wh_delete"
                android:layout_gravity="center"
                android:background="@drawable/selector_shiwuye_detail_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="28dp"
                android:textSize="14sp"
                android:text="删除"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_dialog_person_baseinfo_wh_close"
                android:layout_gravity="center"
                android:background="@drawable/selector_shiwuye_detail_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="28dp"
                android:textSize="14sp"
                android:text="关闭"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>