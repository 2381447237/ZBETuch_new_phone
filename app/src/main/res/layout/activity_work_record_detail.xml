<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_work_record_detail_title"
        android:padding="5dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:background="@drawable/lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工 作 日 志"/>

    <TextView
        android:textColor="#000000"
        android:layout_below="@id/tv_work_record_detail_title"
        android:id="@+id/tv_work_record_detail_name"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="#000000"
        android:layout_below="@id/tv_work_record_detail_name"
        android:id="@+id/tv_work_record_detail_content"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        />

    <TextView
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_work_record_detail_time"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:text="显示图片"
        android:layout_above="@id/tv_work_record_detail_time"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_work_record_detail"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/button_selector"
        />

</RelativeLayout>