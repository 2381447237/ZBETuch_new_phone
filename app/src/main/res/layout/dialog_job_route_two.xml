<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7daf4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="是否职业指导："/>
        <Spinner
            android:entries="@array/gradeate_idChecked"
            android:id="@+id/sp_dialog_job_route_two_occup_guide"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="2"/>




    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="职业指导日期："/>


        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_dialog_job_route_two_occup_guide_time"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />




    </LinearLayout>
    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="职业指导员："/>



        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_two_occup_guider"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />



    </LinearLayout>
    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="职业指导内容："/>

            <TextView
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_two_occup_guide_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="是否推荐就业岗位："/>

        <Spinner
            android:entries="@array/gradeate_idChecked"
            android:id="@+id/sp_dialog_job_route_two_recom_guide"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dialog"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="2"/>




    </LinearLayout>

    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="推荐面试日期："/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_dialog_job_route_two_recom_guide_time"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="推荐面试单位名称："/>

        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_two_recom_com"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <LinearLayout
        android:background="#8dbadb"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="推荐面试岗位名称："/>

        <EditText
            android:textColor="#000000"
            android:id="@+id/et_dialog_job_route_two_recom_job"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_ziyuan_detail_et"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>

        <Button
            android:id="@+id/btn_dialog_job_route_two_sure"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="确定"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btn_dialog_job_route_two_cancel"
            android:textSize="12sp"
            android:background="@drawable/button_selector"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="取消"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>